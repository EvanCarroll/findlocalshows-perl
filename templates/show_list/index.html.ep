% layout "default";

<h1>FindLocalShows</h1>
% if (my $msg = flash "message") {
    <b><%= $msg %></b><br>
% }
<div class="debug">
    <h3>DEBUG</h3>
    <ul>
        <li> <%= link_to Protected => "protected" %> </li>
        <li> <%= link_to Login => "login" %> </li>
    </ul>
</div>
<div class="showlist">
    % for (my $i=0; $i<10; $i++) {
        <div>Show <%= $i %></div>
    %}
</div>